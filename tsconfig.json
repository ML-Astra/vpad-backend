{
  "compilerOptions": {
    "paths": {
      "@controllers/*": ["src/routes/*"],
      "@domain/*": ["src/domain/*"],
      "@functions/*": ["src/domain/functions/*"],
      "@infra/*": ["src/infra/*"],
      "@main/*": ["src/main/*"],
      "@routes/*": ["src/routes/*"],
      "@test/*": ["test/*"]
    },
    "lib": ["ES2020"],
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES2020",
    "rootDir": ".",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*",
    "./dbconfig.ts",
    "./test/**/*",
    "./migrations/**/*",
    "./knexfile.ts",
    "./seeds/**/*",
    "./documentation/*"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "webpack.config.js",
    "dist",
    "prisma"
  ]
}
