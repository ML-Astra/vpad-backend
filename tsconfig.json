{
    "ts-node": {
        "esm": true,
        "module": "ESNext"
    },
    "compilerOptions": {
        "paths": {
            "@docs/*": ["src/docs/*"],
            "@controllers/*": ["src/routes/*"],
            "@domain/*": ["src/domain/*"],
            "@functions/*": ["src/domain/functions/*"],
            "@infra/*": ["src/infra/*"],
            "@main/*": ["src/main/*"],
            "@routes/*": ["src/routes/*"],
            "@test/*": ["test/*"]
        },
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "rootDir": ".",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
    },
    "include": ["./src/**/*"],
    "exclude": [
        "node_modules/**/*",
        ".vscode/**/*",
        "dist/**/*",
        "test/**/*",
        "prisma"
    ]
}
